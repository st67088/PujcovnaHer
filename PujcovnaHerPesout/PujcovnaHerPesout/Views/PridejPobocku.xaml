<Window x:Class="PujcovnaHerPesout.Views.PridejPobocku"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pridej pobocku" Height="150" Width="200" ResizeMode="NoResize"        >
    <Grid>
        <Label Content="Název:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label Content="Adresa:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0"/>
        <TextBox x:Name="textBoxAdresa" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="25" Margin="70,45,10,0"
                 Text="{Binding AdresaPobocky}"/>
        <TextBox x:Name="textBoxNazev" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="25" Margin="70,10,10,0"
                 Text="{Binding NazevPobocky}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="25" Margin="10,75,0,0" Command="{Binding CancelCommand}"/>
        <Button Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="25" Margin="0,75,10,0" Command="{Binding OkCommand}"/>
    </Grid>
</Window>